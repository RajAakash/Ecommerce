// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Product{
  id String  @id @default(cuid())
  name String
  slug String @unique
  category String
  image String
  price String
  brand String
  rating Int
  numReviews Int
  countInStock Int
  description String
}